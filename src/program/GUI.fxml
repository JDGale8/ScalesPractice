<GridPane fx:controller="program.Controller"
          xmlns:fx="http://javafx.com/fxml"
          style="-fx-font-family: 'Product Sans'; -fx-alignment: center; -fx-hgap:10; -fx-vgap:80">

    <Label text="..." GridPane.rowIndex="0"
          fx:id ="displayScale"
          GridPane.columnSpan="2"
          GridPane.halignment="CENTER"
          style="-fx-font-size: 80px; -fx-fill: black"/>

    <Button text = "New Scale"
            onAction ="#handleNewScale"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.halignment="CENTER"/>
</GridPane>