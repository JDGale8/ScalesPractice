<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@android:color/background_light">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Scale"
        android:id="@+id/newScaleBtn"
        android:padding="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="150sp"
        android:text="G"
        android:id="@+id/scaleText"
        android:typeface="sans"
        android:paddingTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Major"
        android:paddingBottom="30dp"
        android:id="@+id/majorText"
        android:layout_alignBottom="@+id/scaleText"
        android:layout_toRightOf="@+id/scaleText"
        android:layout_toEndOf="@+id/scaleText"/>


    <RadioGroup
        android:id="@+id/scaleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/naturalScaleRadio"
            android:id="@+id/radioNaturalScales"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:checked="true"
            android:layout_gravity="center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allScaleRadio"
            android:id="@+id/radioAccidentalScales"
            android:checked="false"
            android:layout_gravity="center"/>


    </RadioGroup>



</RelativeLayout>
