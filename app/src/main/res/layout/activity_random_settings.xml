<?xml version="1.0" encoding="utf-8"?>
<LinearLayout     xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:paddingBottom="@dimen/activity_vertical_margin"
                  tools:context="dallas.scalespractice.RandomSettings"
                  android:background="@drawable/activity_border"
                  android:id="@+id/randomSettingsLayout"
                  android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Scale Type"
        android:id="@+id/textView3"
        android:layout_gravity="left"/>

    <RadioGroup
        android:id="@+id/scaleRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_alignBottom="@+id/majMinRadioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="left"
        android:layout_gravity="left">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/naturalScaleRadio"
            android:id="@+id/naturalScaleRadio"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:checked="true"
            android:layout_gravity="center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allScaleRadio"
            android:id="@+id/allScaleRadio"
            android:checked="false"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Major/Minor Scales"
        android:id="@+id/textView2"
        android:layout_gravity="left"/>

    <RadioGroup
        android:id="@+id/majMinRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/randomSettingsLayout"
        android:layout_toEndOf="@+id/newScaleBtn"
        android:gravity="left"
        android:layout_gravity="left|center_horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major"
            android:id="@+id/majorScaleRadio"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:checked="true"
            android:layout_gravity="left|center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor"
            android:id="@+id/minorScaleRadio"
            android:checked="false"
            android:layout_gravity="left|center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both"
            android:id="@+id/bothMinMajScaleRadio"
            android:checked="false"
            android:layout_gravity="left"/>


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Minor Scales"
        android:id="@+id/textView"
        android:layout_gravity="left"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_toRightOf="@+id/randomSettingsLayout"
        android:layout_toEndOf="@+id/newScaleBtn"
        android:gravity="left"
        android:layout_gravity="left">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melodic Minor"
            android:id="@+id/radioButton"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:checked="true"
            android:layout_gravity="left|center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harmonic Minor"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:layout_gravity="left|center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:layout_gravity="left"/>
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/goButton"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>